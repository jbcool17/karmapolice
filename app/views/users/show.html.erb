<h2><%= @user.name %>'s Profile</h2>

<p>EMAIL: <%= @user.email %></p>
<p>NAME: <%= @user.name %></p>
<p>IMAGE: <%= @user.activities.count %> </p>

<hr>
<div class="controls">
	<p>
		<%= link_to 'Edit', edit_user_path(@user) %>  

		<% if @user.admin? %>
			<%= link_to 'Delete', @user, :method => 'delete', data: {confirm: 'Are you sure? This will delete everything.'} %>
		<% end %>
	</p>
</div>