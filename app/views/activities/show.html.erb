<h2>Activity: <%= @activity.activity %></h2>


<p>Person who preformed activity: <%= User.find(@activity.user_id).name %></p>
<p>Description: <%= @activity.description %></p>
<p>TOTAL POINTS: <%= @total %></p>

<h3>Voting Users </h3>

<% @activity.points.each do |x| %>
	<div style="background-color: <%= cycle('rgba(192,192,192,.2)', 'rgba(192,192,192,.5)') %>" class="every_other">
	<p><%= User.find(x.voting_user_id).name %> gave you <%= pluralize(x.points, '/ 10 Point') %></p> 
	<div class="comment"> 
	<h3>Comment/Feedback</h3> 
	<% if x.comment.present? %>
		<p> <%= x.comment %></p> 
	<% else %>
		<p>No comment here.</p>
	<% end %>
	</div>
	</div>
	
<% end %>

<hr>

<p>Activity was Created by: <%= User.find(@activity.created_by_id).name %></p>
<hr>
<% if @current_user.id == @activity.created_by_id || @current_user.admin? %>
	<%= link_to 'Edit', edit_activity_path(@activity) %>
	<%= link_to "Delete", @activity, :method => 'delete', data: {confirm: 'Are you sure?'} %>
<% end %>

<% if @current_user.id != @activity.user_id %>
	<%= link_to "ADD POINTS/COMMENTS",  new_activity_point_path(@activity, @point) %>
<% end %>