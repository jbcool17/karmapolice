<div class="activity">
<%= form_for(@activity) do |f| %>
	<p>
		<%= f.label :activity %>: 
		<%= f.text_field :activity %>
	</p>
	<p>
		<%= f.label :description %>: 
		<%= f.text_area :description, size: "24x6" %>
	</p>
	<p>
	<label>User: </label><%= f.select :user_id, User.all.map { |user| [user.name,  user.id] }, :include_blank => true %>
	</p>

	<%= f.submit %>
<% end %>

</div>