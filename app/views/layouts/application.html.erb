		   	<li><%= link_to 'Activities', activities_path %></li>
		    <li><%= link_to 'Create New Activity', new_activity_path %></li> 
		    <li class='last'>
		    <%= link_to "Logout #{ @current_user.name }", login_path, :method => 'delete', :data => { :confirm => 'Are you sure you wish to logout?' } %> </li>
		  </ul> 
		<% else %> 
		  
		    <li><%= link_to "Login", 'login' %></a></li> 
		    <li><%= link_to "Signup", new_user_path %></a></li> 
		  
		<% end %>
	</nav>

	
	<div class="container">

		<%= yield %>
		<% if flash[:message].present? %>
  			<p><%= flash[:message] %></p>
		<% end %>
	</div>

<footer><p>TEST</p></footer>
</body>
</html>
